<Project Sdk="Microsoft.NET.Sdk">

    <Import Project="$(SolutionDir)Properties.props" />
    
    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <Title>VoltRpc.Proxy.Generator</Title>
        <Authors>Voltstro</Authors>
        <PackageTags>IPC, RPC, TCP, Source-Generator, Generator</PackageTags>
        <Description>VoltRpc - Proxy Source Generator for VoltRpc.</Description>
        <LangVersion>8.0</LangVersion>
        <Version>1.0.0</Version>
        <PackageVersion>1.0.0</PackageVersion>
        <PackageReleaseNotes>Inital Release.</PackageReleaseNotes>
        <IncludeBuildOutput>false</IncludeBuildOutput>
    </PropertyGroup>
    
    <ItemGroup>
        <None Include="$(OutputPath)\$(AssemblyName).dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="3.3.2">
        <PrivateAssets>all</PrivateAssets>
        <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      </PackageReference>
      <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="3.10.0" PrivateAssets="all" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\VoltRpc\VoltRpc.csproj" />
    </ItemGroup>
    
</Project>
