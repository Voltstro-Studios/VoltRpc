<Project Sdk="Microsoft.NET.Sdk">

    <Import Project="../Properties.props"/>

    <PropertyGroup>
        <TargetFrameworks>net6.0;netstandard2.0;netstandard2.1</TargetFrameworks>
        <RootNamespace>VoltRpc</RootNamespace>
        <Title>VoltRpc</Title>
        <Authors>Voltstro</Authors>
        <PackageTags>IPC, RPC, TCP, Pipes, Named-Pipes, rpc-library, interprocess-communication, dotnet, csharp</PackageTags>
        <Description>VoltRpc - Library designed for high performance RPC communication.</Description>
        <Version>1.2.2</Version>
        <PackageVersion>1.2.2</PackageVersion>
        <PackageReleaseNotes>Release notes for 1.2.2:
            * Made position in buffers public
            * Added Length property to buffers
            * Made Flush and Reset in buffered writer public
        </PackageReleaseNotes>
        <IsTrimmable>true</IsTrimmable>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)'=='Debug'">
        <DocumentationFile>bin\Debug\$(TargetFramework)\VoltRpc.xml</DocumentationFile>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)'=='Release'">
        <DocumentationFile>bin\Release\$(TargetFramework)\VoltRpc.xml</DocumentationFile>
    </PropertyGroup>

</Project>
