<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net5.0;netstandard2.0;netstandard2.1</TargetFrameworks>
        <RootNamespace>VoltRpc</RootNamespace>
        <Title>VoltRpc</Title>
        <Authors>Voltstro</Authors>
        <RepositoryUrl>https://github.com/Voltstro-Studios/VoltRpc</RepositoryUrl>
        <PackageTags>IPC, RPC, TCP</PackageTags>
        <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
        <Description>VoltRpc - Library designed for high performance RPC communication.</Description>
        <Version>1.0.0</Version>
        <PackageVersion>1.0.0</PackageVersion>
        <Company>Voltstro-Studios</Company>
        <Copyright>Copyright Â© Voltstro-Studios 2021</Copyright>
        <PackageProjectUrl></PackageProjectUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <RepositoryType>Github</RepositoryType>
        <PackageIcon>icon.png</PackageIcon>
        <PackageReleaseNotes>Inital Release.</PackageReleaseNotes>
        <LangVersion>8</LangVersion>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)'=='Debug'">
        <DocumentationFile>bin\Debug\$(TargetFramework)\VoltRpc.xml</DocumentationFile>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)'=='Release'">
        <DocumentationFile>bin\Release\$(TargetFramework)\VoltRpc.xml</DocumentationFile>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    </PropertyGroup>

</Project>
