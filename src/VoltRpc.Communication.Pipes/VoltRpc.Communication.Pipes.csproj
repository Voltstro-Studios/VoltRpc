<Project Sdk="Microsoft.NET.Sdk">

    <Import Project="../Properties.props"/>

    <PropertyGroup>
        <TargetFrameworks>net6.0;netstandard2.0;netstandard2.1</TargetFrameworks>
        <Title>VoltRpc.Communication.Pipes</Title>
        <Authors>Voltstro</Authors>
        <PackageTags>IPC, RPC, TCP, Pipes, Named-Pipes, rpc-library, interprocess-communication, dotnet, csharp</PackageTags>
        <Description>VoltRpc.Communication.Pipes - Named Pipes communication for VoltRpc.</Description>
        <Version>1.2.0</Version>
        <PackageVersion>1.2.0</PackageVersion>
        <PackageReleaseNotes>Release notes for 1.2.0:
            * Drop support for .NET 5, add .NET 6
            * Handle isConnectedInternal completly internally
        </PackageReleaseNotes>
        <RootNamespace>VoltRpc.Communication.Pipes</RootNamespace>
        <IsTrimmable>true</IsTrimmable>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)'=='Debug'">
        <DocumentationFile>bin\Debug\$(TargetFramework)\VoltRpc.Communication.Pipes.xml</DocumentationFile>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)'=='Release'">
        <DocumentationFile>bin\Release\$(TargetFramework)\VoltRpc.Communication.Pipes.xml</DocumentationFile>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\VoltRpc\VoltRpc.csproj"/>
    </ItemGroup>

</Project>
